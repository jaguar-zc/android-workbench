<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="cn.stackflow.workbench.common.bean.ContractDTO" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10dp"
        android:background="@drawable/white_selector">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintDimensionRatio="3:2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            bind:imageUrl="@{data.previewImage}"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:textColor="@color/text_6"
            android:textSize="@dimen/size_16sp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:text='@{data.name}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvContractNo"
            tools:text="标题"/>
        <TextView
            android:id="@+id/tvContractNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_6"
            android:textSize="@dimen/size_16sp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:text='@{data.contractNo}'
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvContent"
            tools:text="编号"/>
        <TextView
            android:id="@+id/tvContentType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_6"
            android:textSize="@dimen/size_14sp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:text='@{data.contractTypeName}'
            app:layout_constraintTop_toBottomOf="@+id/tvContractNo"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="合同类型"/>
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_6"
            android:textSize="@dimen/size_14sp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:text='@{data.tag}'
            android:layout_marginTop="@dimen/size_5dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContentType"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="状态"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>